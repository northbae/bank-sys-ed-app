<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="table-ocu-user" author="Lena">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ocu_user"/>
            </not>
        </preConditions>
        <createTable tableName="ocu_user">
            <column name="login" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(255)"/>
            <column name="title" type="varchar(255)"/>
        </createTable>
        <createIndex indexName="idx_title" tableName="ocu_user">
            <column name="title"/>
        </createIndex>
        <createIndex indexName="idx_last_name_first_name" tableName="ocu_user">
            <column name="last_name"/>
            <column name="first_name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>