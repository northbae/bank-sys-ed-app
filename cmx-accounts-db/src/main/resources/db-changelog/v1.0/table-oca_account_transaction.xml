<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="table-oca_account_transaction" author="Lena">
        <preConditions onFail="MARK_RAN" onFailMessage="Таблица существует">
            <not>
                <tableExists tableName="oca_account_transaction"/>
            </not>
        </preConditions>
        <createTable tableName="oca_account_transaction" remarks="История операций по счету">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()" remarks="Уникальный идентификтатор">
                <constraints primaryKey="true"/>
            </column>
            <column name="payer_account" type="varchar(30)" remarks="Номер счета отправителя">
                <constraints nullable="false"/>
            </column>
            <column name="payee_account" type="varchar(30)" remarks="Номер счета получателя">
                <constraints nullable="false"/>
            </column>
            <column name="sum" type="numeric" remarks="Сумма транзакции">
                <constraints nullable="false"/>
            </column>
            <column name="is_inner" type="boolean" remarks="Внутренний перевод"/>
        </createTable>
    </changeSet>

    <changeSet id="create-oca-account-transaction-index-payer-account" author="Lena">
        <preConditions onFail="MARK_RAN" onFailMessage="Индекс существует">
            <not>
                <indexExists tableName="oca_account_transaction" indexName="idx_payer_account"
                             columnNames="payer_account"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_payer_account" tableName="oca_account_transaction">
            <column name="payer_account"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-oca-account-transaction-index" author="Lena">
        <preConditions onFail="MARK_RAN" onFailMessage="Индекс существует">
            <or>
                <not>
                    <indexExists tableName="oca_account_transaction" indexName="idx_payee_account"
                                 columnNames="payee_account"/>
                </not>
                <not>
                    <indexExists tableName="oca_account_transaction" indexName="idx_payer_account_payee_account"
                                 columnNames="payer_account, payee_account"/>
                </not>
            </or>
        </preConditions>
        <createIndex indexName="idx_payee_account" tableName="oca_account_transaction">
            <column name="payee_account"/>
        </createIndex>
        <createIndex indexName="idx_payer_account_payee_account" tableName="oca_account_transaction">
            <column name="payer_account"/>
            <column name="payee_account"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>